{
    "name": "android-control-frontend",
    "version": "1.0.0",
    "description": "Android Multi-Device Control System - Frontend",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:dev": "electron .",
        "electron:build": "electron-builder",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "zustand": "^4.4.0",
        "socket.io-client": "^4.7.0",
        "axios": "^1.6.0",
        "lucide-react": "^0.294.0",
        "clsx": "^2.0.0",
        "tailwind-merge": "^2.1.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "typescript": "^5.2.0",
        "vite": "^5.0.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "tailwindcss": "^3.3.0",
        "postcss": "^8.4.32",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.androidcontrol.app",
        "productName": "Android Control",
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        }
    }
}