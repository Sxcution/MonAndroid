{
    "project_info": {
        "name": "MonAndroid",
        "type": "android_control_system",
        "tech_stack": [
            "Go",
            "React",
            "TypeScript",
            "Vite"
        ]
    },
    "backend_identifiers": {
        "main_entry": "main.go",
        "http_port": "8080",
        "ws_port": "8081",
        "endpoints": {
            "health_check": "/health",
            "devices_list": "/api/devices",
            "devices_scan": "/api/devices/scan",
            "actions_execute": "/api/actions",
            "actions_batch": "/api/actions/batch",
            "websocket": "/ws"
        },
        "models": {
            "device": "Device",
            "device_group": "DeviceGroup",
            "action": "Action",
            "action_request": "ActionRequest"
        },
        "services": {
            "device_manager": "DeviceManager",
            "action_dispatcher": "ActionDispatcher",
            "streaming_service": "StreamingService",
            "scrcpy_client": "ScrcpyClient"
        },
        "scrcpy_protocol": {
            "version": "3.3.3",
            "scid_format": "31-bit HEX (0x00000000-0x7FFFFFFF)",
            "stream_mode": "raw_stream=true (pure H.264 Annex-B)",
            "socket_name_format": "scrcpy_{scid_hex_8chars}"
        },
        "quality_profiles": {
            "usb_default": {
                "bitrate": "1500000",
                "max_size": "720",
                "fps": "30"
            },
            "wifi_default": {
                "bitrate": "800000",
                "max_size": "480",
                "fps": "30"
            },
            "fallback": {
                "bitrate": "500000",
                "max_size": "360",
                "fps": "24"
            },
            "last_resort": {
                "bitrate": "300000",
                "max_size": "240",
                "fps": "15"
            }
        },
        "auto_reconnect": {
            "max_attempts": 3,
            "backoff_pattern": "exponential (2s, 4s, 8s)",
            "short_stream_threshold": "5 seconds"
        }
    },
    "frontend_identifiers": {
        "main_entry": "src/main.tsx",
        "dev_port": "5173",
        "components": {
            "device_card": "DeviceCard",
            "device_grid": "DeviceGrid",
            "device_context_menu": "DeviceContextMenu",
            "screen_view": "ScreenView",
            "control_panel": "ControlPanel",
            "action_bar": "ActionBar",
            "settings_modal": "SettingsModal",
            "expanded_device_view": "ExpandedDeviceView",
            "edit_tag_modal": "EditTagModal",
            "app": "App"
        },
        "services": {
            "api_client": "api",
            "websocket_service": "wsService",
            "device_service": "deviceService",
            "tile_stream_service": "startTileStream",
            "video_tile_worker": "video-tile.worker"
        },
        "websocket_features": {
            "device_subs": "deviceSubs (Set<string>)",
            "subscribe_device": "subscribeDevice(deviceId)",
            "unsubscribe_device": "unsubscribeDevice(deviceId)",
            "auto_resubscribe": "on WebSocket reconnect"
        },
        "store": {
            "app_store": "useAppStore",
            "settings_store": "useSettingsStore"
        },
        "state_variables": {
            "device_slot_registry": "deviceSlotRegistry",
            "expand_button_position": "expandButtonPosition",
            "show_device_name": "showDeviceName",
            "show_fps_indicator": "showFpsIndicator",
            "is_dragging": "isDragging",
            "drag_highlighted_devices": "dragHighlightedDevices",
            "is_drag_highlighted": "isDragHighlighted",
            "available_tags": "availableTags",
            "filter_tag": "filterTag",
            "filter_untagged": "filterUntagged"
        },
        "types": {
            "device": "Device",
            "action": "Action",
            "api_response": "APIResponse"
        }
    },
    "action_types": {
        "tap": "tap",
        "swipe": "swipe",
        "input": "input",
        "key": "key",
        "open_app": "open_app"
    },
    "key_codes": {
        "back": 4,
        "home": 3,
        "menu": 82,
        "power": 26,
        "volume_up": 24,
        "volume_down": 25,
        "enter": 66
    },
    "ui_interactions": {
        "card_selection": {
            "ctrl_click": "Toggle selection (multi-select)",
            "right_click": "Android Back button",
            "alt_right_click": "Open context menu"
        },
        "sidebar_slots": {
            "left_click": "Toggle device selection",
            "right_click": "Open context menu"
        }
    },
    "naming_conventions": {
        "go": "CamelCase for exported, camelCase for unexported",
        "typescript": "camelCase for variables/functions, PascalCase for components/types",
        "css": "kebab-case for classes"
    }
}